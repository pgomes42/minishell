# ================================================
# Minishell Development Configuration
# ================================================

# Compilation flags for debugging
DEBUG_FLAGS = -g -fsanitize=address -fsanitize=undefined
RELEASE_FLAGS = -O2 -DNDEBUG

# Valgrind options for memory testing
VALGRIND_OPTS = --leak-check=full --show-leak-kinds=all --track-origins=yes

# Test environment variables
export MINISHELL_TEST_MODE=1
export MINISHELL_DEBUG=0

# Color definitions for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m'

# Development aliases
alias mshell='./minishell'
alias mtest='./test_minishell.sh'
alias mvalgrind='valgrind $VALGRIND_OPTS ./minishell'
alias mclean='make fclean && make'
alias mgdb='gdb ./minishell'

# Quick build commands
alias mbuild='make'
alias mdebug='make debug'
alias mrelease='make CFLAGS="$RELEASE_FLAGS"'

# Git shortcuts for development
alias gst='git status'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gaa='git add .'
alias gcm='git commit -m'
alias gps='git push'
alias gpl='git pull'

# Project structure display
alias tree='find . -type f -name "*.c" -o -name "*.h" -o -name "Makefile" | grep -v "\.git" | sort'

echo -e "${GREEN}Minishell development environment loaded!${NC}"
echo -e "${YELLOW}Available aliases:${NC}"
echo -e "  ${BLUE}mshell${NC}    - Run minishell"
echo -e "  ${BLUE}mtest${NC}     - Run test suite"
echo -e "  ${BLUE}mvalgrind${NC} - Run with valgrind"
echo -e "  ${BLUE}mclean${NC}    - Clean and rebuild"
echo -e "  ${BLUE}mgdb${NC}      - Debug with gdb"